<p id="notice"><%= notice %></p>

<h1>Listing Veggies</h1>

<table>
  <thead>
    <tr>
      <th>Count</th>
      <th>Date</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @veggies.each do |veggy| %>
      <tr>
        <td><%= veggy.count %></td>
        <td><%= veggy.date %></td>
        <td><%= veggy.user %></td>
        <td><%= link_to 'Show', veggy %></td>
        <td><%= link_to 'Edit', edit_veggy_path(veggy) %></td>
        <td><%= link_to 'Destroy', veggy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Veggie', new_veggy_path %>
